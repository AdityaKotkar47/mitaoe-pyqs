// This tells Prisma to use SQLite and where to find the database file
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// This generates the Prisma Client we'll use to interact with the database
generator client {
  provider = "prisma"
}

// This defines our Paper model - each field represents a column in the database
model Paper {
  id          String   @id @default(cuid()) // Unique identifier for each paper
  year        String                        // Academic year
  branch      String?                       // Branch (optional)
  semester    String?                       // Semester (optional)
  subject     String?                       // Subject name (optional)
  examType    String?                       // Type of exam (optional)
  fileName    String                        // Original filename
  originalUrl String                        // URL to the actual paper
  createdAt   DateTime @default(now())      // When this record was created
  updatedAt   DateTime @updatedAt           // When this record was last updated
}